<div class="page-title">
  <h1><%= @farm.name %> Beans</h1>
</div>

<ol class="breadcrumb">
  <li><%= link_to 'Farms', farms_path %></li>
  <li><%= link_to @farm.name, farm_path(@farm) %></li>
  <li class="active">Beans</li>
</ol>

<table class="table table-hover">
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Spouse name</th>
      <th>Street address</th>
      <th>City</th>
      <th>State</th>
      <th>Zip</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @beans.each do |bean| %>
      <tr>
        <td><%= bean.first_name %></td>
        <td><%= bean.last_name %></td>
        <td><%= bean.spouse_name %></td>
        <td><%= bean.street_address %></td>
        <td><%= bean.city %></td>
        <td><%= bean.state %></td>
        <td><%= bean.zip %></td>
        <td><%= link_to 'Show', [@farm, bean] %></td>
        <td><%= link_to 'Edit', edit_farm_bean_path(@farm, bean) %></td>
        <td><%= link_to 'Destroy', [@farm, bean], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Bean', new_farm_bean_path(@farm) %>
