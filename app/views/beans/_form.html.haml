= form_for([@farm, @crop, @bean]) do |f|
  - if @bean.errors.any?
    #error_explanation
      %h2
        = pluralize(@bean.errors.count, "error")
        prohibited this bean from being saved:
      %ul
        - @bean.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :first_name
    %br/
    = f.text_field :first_name
  .field
    = f.label :last_name
    %br/
    = f.text_field :last_name
  .field
    = f.label :spouse_name
    %br/
    = f.text_field :spouse_name
  .field
    = f.label :street_address
    %br/
    = f.text_field :street_address
  .field
    = f.label :city
    %br/
    = f.text_field :city
  .field
    = f.label :state
    %br/
    = f.text_field :state
  .field
    = f.label :zip
    %br/
    = f.text_field :zip
  .actions
    = f.submit
