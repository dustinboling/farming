<!DOCTYPE html>
<html>
<head>
  <title>Farming</title>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<header class="navbar navbar-default" role="navigation">
  
  <nav class="container">

	  <!-- Brand and toggle get grouped for better mobile display -->
	  <div class="navbar-header">
	    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
	      <span class="sr-only">Toggle navigation</span>
	      <span class="icon-bar"></span>
	      <span class="icon-bar"></span>
	      <span class="icon-bar"></span>
	    </button>
	    <%= link_to 'Farming', root_path, class: 'navbar-brand' %>
	  </div>

	  <!-- Collect the nav links, forms, and other content for toggling -->
	  <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
	    
	  	<% if user_signed_in? %>
		    <ul class="nav navbar-nav">
		      <li class="dropdown">
		        <a href="#" class="dropdown-toggle" data-toggle="dropdown">My Farms <b class="caret"></b></a>
		        <ul class="dropdown-menu">
		          <li><%= link_to 'Show All', farms_path %></li>
		          <li><%= link_to 'Add New', new_farm_path %></li>
		        </ul>
		      </li>
		    </ul>

		    <ul class="nav navbar-nav navbar-right">
		      <li class="dropdown">
		        <a href="#" class="dropdown-toggle" data-toggle="dropdown">dustin@dustinboling.com <b class="caret"></b></a>
		        <ul class="dropdown-menu">
		          <li><%= link_to raw('<span class="glyphicon glyphicon-cog"></span> Account Settings'), edit_user_registration_path %></li>
		          <li class="divider"></li>
		          <li><%= link_to raw('<span class="glyphicon glyphicon-log-out"></span> Logout'), destroy_user_session_path, method: :delete %></li>
		        </ul>
		      </li>
		    </ul>

	    <% else %>

	    	<ul class="nav navbar-nav navbar-right">
		      <li class="dropdown">
		        <li><%= link_to 'Login', new_user_session_path %></li>
		        <li><%= link_to 'Register', new_user_registration_path %></li>
		      </li>
		    </ul>

	    <% end %>

	  </div><!-- /.navbar-collapse -->
  </nav>
</header>

<main id="main" class="container">

		<p class="notice"><%= notice %></p>
		<p class="alert"><%= alert %></p>

		<%= yield %>

	</main>
</body>
</html>
