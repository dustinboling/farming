<h1><%= @farm.name %> Crops</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Farm</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @crops.each do |crop| %>
      <tr>
        <td><%= crop.name %></td>
        <td><%= crop.description %></td>
        <td><%= crop.farm.name %></td>
        <td><%= link_to 'Show', [@farm, crop] %></td>
        <td><%= link_to 'Edit', edit_farm_crop_path(@farm, crop) %></td>
        <td><%= link_to 'Destroy', [@farm, crop], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Crop', new_farm_crop_path(@farm) %>
