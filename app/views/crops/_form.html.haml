= form_for([@farm, @crop]) do |f|
  - if @crop.errors.any?
    #error_explanation
      %h2
        = pluralize(@crop.errors.count, "error")
        prohibited this crop from being saved:
      %ul
        - @crop.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :name
    %br/
    = f.text_field :name
  .field
    = f.label :description
    %br/
    = f.text_area :description
  .actions
    = f.submit
