<h1>The <%= @farm.name %> Farm</h1>
<% if( @farm.description? ) %>
  <p><%= @farm.description %></p>
<% end %>
<p><%= @farm.updated_at.strftime("Last updated on %b %d") %></p>

<h2><%= @farm.name %> crops:</h2>
<ul>
  <% @farm.crops.each do |crop| %>

    <li>
      <strong><%= link_to crop.name, farm_crop_path(@farm, crop) %></strong><br>
      <% if( crop.description? ) %>
        <%= crop.description %><br>
      <% end %>
      
      <%= pluralize(crop.beans.size, 'Bean') %><br>
      <%= crop.updated_at.strftime("Last updated on %b %d") %>
    </li>
    <li>
      <%= link_to 'Plant a New Crop', new_farm_crop_path(@farm) %><br><br>
    </li>

    <% if( @farm.crops.empty? ) %>
      <li><%= link_to 'Add your first crop', new_farm_crop_path(@farm) %></li>
    <% end %>

  <% end %>
</ul>

<p><%= link_to 'New Farm', new_farm_path %> | <%= link_to 'Edit Farm', edit_farm_path(@farm) %> | <%= link_to 'Delete Farm', farm_path(@farm), :method => :delete, :confirm => "Are you sure you want to delete your #{@farm.name} farm?" %></p>
