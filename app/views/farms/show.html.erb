<div class="panel sheet farm active">
  <title><%= @farm.name %></title>

  <header>
    <div class="header_links">
      <a href="/1789373/projects/3336506-beck-co/accesses">
        <span class="link">Hire more farmhands</span><br>
        <span class="detail">2 people working this farm</span>
      </a>
      <a href="/1789373/projects/3336506-beck-co/accesses">
        <span class="link">Destroy this farm</span><br>
        <span class="detail">uproot your soi beans and quit</span>
      </a>
    </div>
    <h1><%= @farm.name %></h1>

    <div class="farm_toolbar">
      
      <div class="tools">

        <div class="group">
          <a href="/topics">
            <span class=""><strong>18 Discussions</strong></span>
          </a>
          <a href="/todolists">
            <span class=""><strong>1 To-do</strong></span>
          </a>
          <a href="/attachments">
            <span class=""><strong>24 Files</strong></span>
          </a>
          <a href="calendar_events">
            <span class=""><strong>Dates</strong></span>
          </a>
        </div>
        <div class="group not_in_farm">
          <span class="label">Add the first:</span>
          <a href="/documents">
          <span class="">Text document</span>
          </a>
        </div>
      </div>
    </div>
  </header>

  <section class="crops cards">
    <div class="row">
      <% @farm.crops.each do |crop| %>
        <article class="card">

          <a href="<%= farm_crop_path(@farm, crop) %>" class="crop_card">
            <h5><%= crop.name %></h5>
            <p class="description"><%= crop.description %></p>
            <p class="updated_at">
              <time datetime="<%= crop.updated_at %>"><%= crop.updated_at.strftime("Last updated on %b %d") %></time>
            </p>
            <p class="beans">
              <%= pluralize(crop.beans.size, 'Bean') %>
            </p>
            <div class="fertilizers">
              <%= pluralize(crop.beans.size, 'TODO') %>
            </div>
          </a>
        </article>
      <% end %>
    </div>
  </section>
</div>
